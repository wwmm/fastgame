<interface domain="fastgame">
    <template class="GtkListItem">
        <property name="child">
            <object class="GtkButton">
                <property name="tooltip_text" translatable="yes">Remove this line</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="icon_name">user-trash-symbolic</property>

                <signal name="clicked" handler="on_remove_line" object="GtkListItem" />

                <style>
                    <class name="flat" />
                </style>
            </object>
        </property>
    </template>
</interface>